# How-to-build using OMake
#
# cp OMakeroot.in OMakeroot # to create OMakeroot for the first time

# If OMakeroot is here, include OMyMakefile
if $(file-exists OMakeroot)
   include OMyMakefile
   export

MyOCamlfindInstall(ppx_implicits ppx_implicits_type_reduction ppx_implicits_final_check, lib ppx)

.SUBDIRS: tests

setup.ml: _oasis
	oasis setup
